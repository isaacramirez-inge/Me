---
import faviconUrl from '../../public/favicon.svg?url';
import Navbar from '../components/Navbar.astro';
import SideBar from '../components/Sidebar.astro';
import CookieConsent from '../components/CookieConsent.tsx';
const { t, m, title, pagekey } = Astro.props;
import '../styles/global.css';
---
<!doctype html>
<html lang={t._info.code}>
	<head>
		<meta charset="UTF-8" />
		<meta name="theme-color" content="#000000">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={faviconUrl} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{t.common.tabtitle}</title>
	</head>
	<body class="overflow-hidden">
		<canvas id="starfield"/>
		<Navbar title={title} t={t} m={m}/>
		<SideBar t={t} m={m}/>
        <!-- <CookieConsent t={t} lang={t._info.code} client:load /> -->
		<main class="transition-transform h-[100dvh] scrollbar-white overflow-auto duration-1000 ">
			<slot />
		</main>
		<script define:vars={{}}>
			const mainEl = document.querySelector('main');
			if (mainEl) {
				window.addEventListener("chat-state-change", (e) => {
					const { isOpen, isMobile } = e.detail;

					mainEl.classList.remove("ml-[20%]", "hidden");
					if (isMobile) {
						if (isOpen) {
							mainEl.classList.add("hidden");
						}
					} else {
						if (isOpen) {
							mainEl.classList.add("ml-[20%]");
						}
					}
				});
			}
		</script>
		<script>
			document.addEventListener('DOMContentLoaded', () => {
				const canvas = document.getElementById('starfield') as HTMLCanvasElement;
				if (!canvas) return;
				const ctx = canvas.getContext('2d') as CanvasRenderingContext2D;
				if (!ctx) return;
				
				let width = canvas.width = window.innerWidth;
				let height = canvas.height = window.innerHeight;
				
				window.addEventListener('resize', () => {
					width = canvas.width = window.innerWidth;
					height = canvas.height = window.innerHeight;
				});
				
				const layers = [
					{ count: 500, speed: 0.05, colorRange: [180, 240], sizeFactor: 1.2 },
					{ count: 250, speed: 0.1, colorRange: [170, 230], sizeFactor: 1.5 },
					{ count: 150, speed: 0.2, colorRange: [160, 220], sizeFactor: 2 },
					{ count: 120, speed: 0.4, colorRange: [150, 210], sizeFactor: 3 },
					{ count: 80, speed: 0.7, colorRange: [140, 200], sizeFactor: 3.5 },
					{ count: 40, speed: 1.2, colorRange: [130, 190], sizeFactor: 4 },
					{ count: 15, speed: 2.0, colorRange: [120, 180], sizeFactor: 6 },
					{ count: 5, speed: 3.5, colorRange: [110, 170], sizeFactor: 8 },
					{ count: 2, speed: 6.0, colorRange: [100, 160], sizeFactor: 10 },
				];
				
				// const layers = [
				// 	// Estrellas más lejanas: Rojas
				// 	{ count: 500, speed: 0.05, colorRange: [0, 20], sizeFactor: 1.2 }, 
				// 	{ count: 250, speed: 0.1, colorRange: [10, 40], sizeFactor: 1.5 },
				// 	// Estrellas intermedias: Blancas y amarillentas (predominantes)
				// 	{ count: 150, speed: 0.2, colorRange: [30, 80], sizeFactor: 2 },
				// 	{ count: 120, speed: 0.4, colorRange: [60, 100], sizeFactor: 3 },
				// 	// Estrellas más cercanas: Azules y violetas (las más comunes)
				// 	{ count: 80, speed: 0.7, colorRange: [200, 240], sizeFactor: 5 },
				// 	{ count: 40, speed: 1.2, colorRange: [210, 250], sizeFactor: 8 },
				// 	{ count: 15, speed: 2.0, colorRange: [220, 260], sizeFactor: 12 },
				// 	// Estrellas gigantes, muy brillantes y cercanas (Azules intensas)
				// 	{ count: 5, speed: 3.5, colorRange: [230, 270], sizeFactor: 18 },
				// 	// Estrella única y rojiza al frente para un contraste dramático
				// 	{ count: 2, speed: 6.0, colorRange: [350, 10], sizeFactor: 20 },
				// ];

				interface Star {
					x: number;
					y: number;
					z: number;
					speed: number;
					sizeFactor: number;
					color: string;
				}
				
				const stars: Star[] = [];
				
				for (let layer of layers) {
					for (let i = 0; i < layer.count; i++) {
						stars.push({
							x: (Math.random() - 0.5) * width * 2,
							y: (Math.random() - 0.5) * height * 2,
							z: Math.random() * width,
							speed: layer.speed,
							sizeFactor: layer.sizeFactor,
							color: `hsl(${Math.random() * (layer.colorRange[1] - layer.colorRange[0]) + layer.colorRange[0]}, 100%, ${Math.random() * 40 + 60}%)`
						});
					}
				}
				
				const fov = 200;
				
				function draw() {
					ctx.fillStyle = "rgba(0, 0, 0, 0.2)";
					ctx.fillRect(0, 0, width, height);
				
					for (let star of stars) {
						star.z -= star.speed;
				
						if (star.z <= 0) {
							star.x = (Math.random() - 0.5) * width * 2;
							star.y = (Math.random() - 0.5) * height * 2;
							star.z = width;
						}
				
						const k = fov / star.z;
						const sx = star.x * k + width / 2;
						const sy = star.y * k + height / 2;
				
						if (sx < 0 || sx >= width || sy < 0 || sy >= height) continue;
				
						const size = Math.max(0, (1 - star.z / width)) * star.sizeFactor * 2;
						const alpha = (1 - star.z / width) * 0.9;
				
						ctx.beginPath();
						ctx.fillStyle = star.color;
						ctx.globalAlpha = alpha;
						const gradient = ctx.createRadialGradient(sx, sy, 0, sx, sy, size);
						gradient.addColorStop(0, star.color);
						gradient.addColorStop(1, "transparent");
				
						ctx.fillStyle = gradient;
						ctx.beginPath();
						ctx.arc(sx, sy, size, 0, Math.PI * 2);
						ctx.fill();
					}
				
					ctx.globalAlpha = 1;
					requestAnimationFrame(draw);
				}
				
				draw();
			});
		</script>
	</body>
</html>
<script>
