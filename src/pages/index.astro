---
const supportedLocales = ['en-us', 'es-es', 'es-sv'];
const defaultLocale = 'en-US';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Redirecting...</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #0b0b0b;
        color: white;
        font-family: sans-serif;
        margin: 0;
        flex-direction: column;
      }
      .spinner {
        width: 50px;
        height: 50px;
        border: 5px solid #ccc;
        border-top-color: #ff6d00;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-top: 1rem;
      }
      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }
    </style>
    <script type="text/javascript">
      const supported = ["en-us", "es-es", "es-sv"];
      const fallback = "en-us";
      const lang = navigator.language || navigator.userLanguage;
      const matched = supported.find(l => lang.startsWith(l.split("-")[0])) || fallback;

      // Retrasar un poco para permitir ver la animaciÃ³n (opcional)
      setTimeout(() => {
        window.location.replace(`/Me/${matched}/`);
      }, 800); // 0.8 segundos
    </script>
  </head>
  <body>
    <div class="spinner"></div>
  </body>
</html>
